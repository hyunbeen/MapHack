<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.js.realmexample2.JoinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MapHack 회원수정"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="이름"
            android:textColor="@color/colorPrimary"
            android:gravity="right"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/maphack_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Name" />
    </LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="닉네임"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/maphack_nickname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Nickname"
            android:inputType="number" />
    </LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="이메일"
            android:textColor="@color/colorPrimary"
            android:gravity="right"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/maphack_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="20"
            android:hint="Email"
            android:inputType="textEmailAddress" />
    </LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="암호"
            android:textColor="@color/colorPrimary"
            android:gravity="right"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/maphack_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="8"
            android:hint="Password"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_join_ok"
            android:text="확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>

